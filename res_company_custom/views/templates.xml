<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
	    <act_window
            id="action_open_company_products"
            name="Shop Products"
            res_model="product.template"
            view_type="form"
            view_mode="kanban,form,tree"
            domain="[('company_id', '=', active_id)]" />
        <record id="view_form_res_company_inherited" model="ir.ui.view">
            <field name="name">Company form FairMarket extension</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
              <field name="logo" position="before" >
                <field name="logo2" widget="image" class="oe_avatar oe_left"/> 
                  <div attrs="{'invisible' : [('logo2','!=',False)]}" class="oe_view_nocontent oe_clear">
                        <p class="oe_view_nocontent_create oe_edit_only">
                            Click to set your second company logo or pictogram.
                        </p>
                  </div>
                  <div class="oe_right oe_button_box">
                      <button class="oe_inline oe_stat_button"
                          type="action"
                          name="%(action_open_company_products)d"
                          icon="fa-cubes">
                              <field name="products_count" string="Products" widget="statinfo" />
                       </button>
                  </div>
              </field>       
              <xpath expr="//group[@string='Bank Accounts']" position="replace">
				  <field name="bank_ids" invisible="1"/> 
                  <group>
                      <field name="company_supplier" string="Supplier in Collective Purchases" help="Set this box to be listed as supplier for collective purchases. If set to no you only will be selling your products in the normal shop"/> 
                      <field name="description" />
                      <field name="sale_note" />
                  </group>
                  <div class="alert alert-info mt4" role="alert">
                       <center><p><strong>Privacy Warning!</strong></p></center>
                       <p>All the data submitted in this form, except your FairCoin address, will be publicly avalaible in the web.
                       Do <b>not</b> introduce any data that you do not want to show to the public.</p>
                       <p>You can leave fields empty, although if you do not introduce the country, the regional module will not work with your shop.
                       If you do not introduce a contact the public will not be able to comunicate with you.
                       If you do not fill the FairCoin address field, we can not send you the FairCoins for your sells in FairMarket.</p>
                  </div>
              </xpath>
              <xpath expr="//page[@string='Configuration']" position="attributes">
                     <attribute name="invisible">1</attribute>  
              </xpath>   
              <xpath expr="//page[@string='Report Configuration']" position="attributes">
                     <attribute name="invisible">1</attribute>  
              </xpath>   
            </field>
        </record>
        <record id="view_form_res_company_inherited2" model="ir.ui.view">
            <field name="name">Company form FairMarket extension2</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="account.view_company_inherit_form"/>
            <field name="arch" type="xml">
              <xpath expr="//page[@string='Overdue Payments']" position="attributes">
                     <attribute name="invisible">1</attribute>  
              </xpath>   
            </field>
        </record>
    </data>
</openerp> 
