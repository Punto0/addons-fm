<openerp>
    <data>
        <!-- Customize header  -->
        <template id="custom_header" inherit_id="website.layout" name="Custom Header">
             <!-- Assign an id  -->
             <xpath expr="//div[@id='wrapwrap']/header" position="attributes">
                  <attribute name="id">my_header</attribute>
             </xpath>
             <!-- Add an element after the top menu  -->
             <xpath expr="//div[@id='wrapwrap']/header/div" position="after">
                      <a href="/blog/our-news-1/post/join-our-20-discount-offer-9">
                    <div class="oe_image container" style="padding-bottom: 20px;">
                        <img itemprop="image" class="img"
                             padding-bottom="20px"
                             width="100%"
                             height="50%" 
                             src="/fairmarket_tunes/static/src/img/1-1campaign_banner.png" 
                             alt="1:1 campaign discount"/>
                    </div>
                      </a>
             </xpath>
        </template>
    </data>
</openerp>
